<%= render 'shared/errors' , obj: @article%>
<div class="row">
  <div class="col-12">

    <%= form_for(@article, :html => {role: "form"}) do |f| %>

        <div class="form-group row">
          <div class="col-sm-2 col-form-label text-right">
            <%= f.label :title, class: "text-white " %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of an article", autofocus: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2 col-form-label text-right">
            <%= f.label :description, class: "text-white " %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of an article", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-8 offset-2 form-check">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <%  cb.label(class: "form-check-label text-white input_checkbox"){cb.check_box(class: "form-check-input" ) +" "+ cb.text+" "}  %>
            <% end %>
          </div>
        </div>
        <hr class="hr " style="margin-top: 5%">
        <div class="form-group">
          <div class="col-12 text-right">
            <%= f.submit class: "btn btn-primary btn-lg text-white" %>
          </div>
        </div>

    <% end %>
    <div class="text-center">
      <%= link_to "[ Cancel request and return to articles listing ]", articles_path, class: "text-white" %>
    </div>
  </div>
</div>