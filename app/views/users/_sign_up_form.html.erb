<%= render 'shared/errors' , obj: @user %>
<div class="row">
  <div class="col-12">

    <%= form_for( @user, :html => {role: "form"}) do |f| %>

        <div class="form-group row">
          <div class="col-sm-2 col-form-label text-right">
            <%= f.label :username, class: "text-white " %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2 col-form-label text-right">
            <%= f.label :email, class: "text-white " %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2 col-form-label text-right">
            <%= f.label :password, class: "text-white " %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
          </div>
        </div>
        <hr class="hr " style="margin-top: 5%">
        <div class="form-group">
          <div class="col-12 text-right">
            <%= f.submit name ,class: "btn btn-primary btn-lg text-white" %>
          </div>
        </div>

    <% end %>
    <div class="text-center">
        <%= link_to "[ Cancel request and return to articles listing ]", articles_path, class: "text-white" %>
    </div>
  </div>
</div>