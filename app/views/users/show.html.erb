<div class="row">
  <div class="col-10 offset-1">
    <div class="card card-success alpha-form"
         style="margin-bottom: 5%">
      <div class="card-header text-center text-white">
        <h2 class="h2 alpha-title">Welcome to <%= @user.username %>'s page </h2>
      </div>
      <div class="card-img-top text-center" style="margin-top: 2%">
        <%=  gravatar_for @user, 280 %>
      </div>
      <div class="card-block">
        <div class="card card-success alpha-form">
          <div class="card-header text-center text-white">
            <h4 class="h4 alpha-title"> <%= @user.username %>'s articles </h4>
          </div>
          <%= will_paginate(@user_articles) %>
          <%= render 'articles/article', obj:@user_articles %>
          <%= will_paginate(@user_articles)  %>
        </div>
      </div>
    </div>
  </div>
</div>