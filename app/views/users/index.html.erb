<div class="row"
     <% if @users.any? %> style="margin-bottom: 5%;"
     <% end %> >
  <div class="col-8 offset-2">
    <div class="card card-primary alpha-listing text-white ">
      <div class="card-header  text-white">
        <h2 class="h2 alpha-title " align="center">All Alpha Bloggers</h2>
      </div>
      <div class="card-block text-center">
        <% if @users.any?
             @users.each do |user| %>
                <%= render 'user', user:user%>

            <% end
               end %>
      </div>
    </div>
  </div>
</div>